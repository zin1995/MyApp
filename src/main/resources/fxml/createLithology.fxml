<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MyApp.controllers.LithologyController">
    <children>
        <VBox prefHeight="479.0" prefWidth="276.0" spacing="3.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label alignment="CENTER" text="Выберите" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </Label>
                <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label minWidth="-Infinity" text="Кривая: ">
                                    <HBox.margin>
                                        <Insets left="10.0" />
                                    </HBox.margin>
                                </Label>
                                <ComboBox fx:id="comboBox1" minWidth="60.0">
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </ComboBox>
                            </children>
                        </HBox>
                        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0">
                            <content>
                                <VBox fx:id="firstVBox" />
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
                <Label alignment="BOTTOM_LEFT" text="ИЛИ" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </Label>
                <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label minWidth="-Infinity" text="Кривая 1: ">
                                    <HBox.margin>
                                        <Insets left="10.0" />
                                    </HBox.margin>
                                </Label>
                                <ComboBox fx:id="comboBox2" minWidth="60.0">
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </ComboBox>
                                <Label minWidth="-Infinity" text="Кривая 2: " />
                                <ComboBox fx:id="comboBox3" minWidth="60.0" />
                            </children>
                            <padding>
                                <Insets right="4.0" />
                            </padding>
                        </HBox>
                        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0">
                            <content>
                                <VBox fx:id="secondVBox" />
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
                <HBox alignment="BOTTOM_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Button mnemonicParsing="false" onAction="#OkAction" text="Ok" />
                        <Button cancelButton="true" mnemonicParsing="false" onAction="#closeAction" text="Cancel" />
                    </children>
                    <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
